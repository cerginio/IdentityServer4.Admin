{
  "ConnectionStrings": {
    "ConfigurationDbConnection": "Data Source=(LocalDb)\\MSSQLLocalDB;database=db-pluto-ids4-cfg-dev;trusted_connection=yes;",
    "PersistedGrantDbConnection": "Data Source=(LocalDb)\\MSSQLLocalDB;database=db-pluto-ids4-ops-dev;trusted_connection=yes;",
    "IdentityDbConnection": "Data Source=(LocalDb)\\MSSQLLocalDB;database=db-pluto-ids4-cfg-dev;trusted_connection=yes;",
    "AdminLogDbConnection": "Data Source=(LocalDb)\\MSSQLLocalDB;database=db-pluto-ids4-ops-dev;trusted_connection=yes;"
  },
  "AdminConfiguration": {
    "IdentityAdminBaseUrl": "http://localhost:9000",
    "IdentityAdminRedirectUri": "http://localhost:9000/signin-oidc",
    "IdentityServerBaseUrl": "https://localhost:44301/idsrv",
    "ClientId": "pluto_identity_admin",
    "ClientSecret": "pluto-identity-admin-secret",
    "OidcResponseType": "code id_token",
    "Scopes": [
      "openid",
      "profile",
      "email",
      "roles"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug", //"Error",
      "Override": {
        "Skoruba": "Information",
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Log\\skoruba_admin.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=(LocalDb)\\MSSQLLocalDB;database=db-pluto-ids4-ops-dev;trusted_connection=yes;",
          "tableName": "Log",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ]
          }
        }
      }
    ]
  }
}